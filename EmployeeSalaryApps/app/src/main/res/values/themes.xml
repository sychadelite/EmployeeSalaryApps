<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmployeeSalaryApps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fourth</item>
        <item name="colorPrimaryVariant">@color/fourth</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/fourth</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="civ_border_color">@color/fourth</item>

    </style>

    <!-- Customize your SplashScreen theme here. -->
    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
    </style>

    <!-- Customize your Alert Dialog theme here. -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- Customize your Bottom Sheet Dialog theme here. -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/fourth</item>
        <item name="tint">@color/black</item>
    </style>

    <!-- Customize your no action bar theme here. -->
    <style name="Theme.EmployeeSalaryApps.NoStatusBar">
        <item name="colorPrimary">@color/fourth</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your no action bar theme here. -->
    <style name="Theme.EmployeeSalaryApps.TransparentStatusBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your no action bar theme here. -->
    <style name="Theme.EmployeeSalaryApps.NoActionBar">
        <item name="colorPrimary">@color/fourth</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Customize your Fourth action bar theme here. -->
    <style name="Theme.EmployeeSalaryApps.FourthActionBar">
        <item name="colorPrimary">@color/fourth</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>


</resources>