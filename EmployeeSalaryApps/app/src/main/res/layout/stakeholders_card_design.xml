<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stakeholders_card"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:foregroundTint="@color/gray"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_gravity="center"
    android:elevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/stakeholders_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/barj"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/stakeholders_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="barjlazuardi"
            android:textSize="20sp"
            android:textColor="@color/fourth"
            android:fontFamily="@font/baloo"/>

        <RatingBar
            android:id="@+id/stakeholders_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            android:progressTint="@color/yellow"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/stakeholders_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, my name is Barj. My hobbies are playing football, music, games and so many more."
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:textAlignment="center"
            android:elegantTextHeight="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>