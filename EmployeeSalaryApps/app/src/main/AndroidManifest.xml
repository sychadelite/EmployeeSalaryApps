<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barjlazuardi.employeesalaryapps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmployeeSalaryApps"
        android:usesCleartextTraffic="true">
        <activity android:name=".ConfirmOrderActivity" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroductoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.TransparentStatusBar" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ForgotPassActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".PegawaiActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ViewAllEmpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ViewEmpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".GolonganActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ViewAllGolActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ViewGolActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MessageActivity"
            android:theme="@style/Theme.EmployeeSalaryApps.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>